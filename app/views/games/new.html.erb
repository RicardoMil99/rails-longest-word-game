<h1>NEW GAME</h1>
<h2>
  <% @letters.each do |letter| %>
    <%= letter.capitalize %>
  <% end %>
</h2>
<form action="/score" method="POST">
  <input type="text" name="score" placeholder="Write your word here">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
